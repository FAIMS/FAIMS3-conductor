<h1>User Roles for {{notebook.name}}</h1>

<table class="table">

    <thead>
      <th>Name</th>
      {{#each roles}}
        <th>{{this}}</th>
      {{/each}}
    </thead>
    <tbody>
    {{#each users}}
     <tr>
      <th>{{this.name}} ({{this.username}})</th>
      {{#each this.roles}}
        <td>
          <input type="checkbox" 
            class="form-check-input" 
            value="{{this.name}}"
            id="role-{{../this.username}}-{{this}}"
            {{#if this.value}}checked{{/if}}>
        </td>
      {{/each}}
      </tr>
    {{/each}}
    </tbody>


</table>
 